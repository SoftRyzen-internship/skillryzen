{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true, // Працюємо з пакетами, які використовуємо
    "allowSyntheticDefaultImports": true, // common.js як зі звичайного пакету за допомогою import
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "lib": [
      "es2021",
      "DOM"
    ],
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
